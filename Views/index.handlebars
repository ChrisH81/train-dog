<section id="profile" class="mainSection">
    <h2 class="section-title">Create a Profile</h2>
    <form action="newDog" method="POST">
        <div id="profileColumns">


            <section class="container">
                <h3> What is your name?</h3>
                <input name="clientName" id="clientName" type="text" placeholder="First Last" class="form-control">

                <h3> What is your dogs name?</h3>
                <input name="dogName" id="dogName" type="text" placeholder="Dog Name" class="form-control">

                <h3> How old is your Dog?</h3>
                <input name="dogAge" id="dogAge" type="number" placeholder="0-120 Months" class="form-control">

            </section>

            <section class="container">
                <h3> What breed is your dog?</h3>
                <select name="dogBreed" id="dogBreed" type="text" class="form-control">
                    <option value="shepherd">Shepherd</option>
                    <option value="bulldog">Bulldog</option>
                    <option value="coonhound">Coonhound</option>
                    <option value="pitbull">Pitbull</option>
                </select>
                <br>
                <br>
                <h3>Not sure...</h3>
                <a href="https://youtu.be/HlhVtw6K4k8">This video will help</a>
            </section>

            <section class="container">
                <h3> Is your dog Male or Female?</h3>
                <select name="dogSex" id="dogSex" type="text" class="form-control">
                    <option value="female">Female</option>
                    <option value="male">Male</option>
                </select><br>
                <br>

                <!-- <input type="radio" id="male" name="gender" value="male">
                <label for="male">Male</label><br>
                <input type="radio" id="female" name="gender" value="female">
                <label for="female">Female</label><br> -->

                <h3> Is your dog spayed/neutered?</h3>
                <select name="dogSnipped" id="dogSnipped" type="text" class="form-control">
                    <option value="true">Yes</option>
                    <option value="false">No</option>
                </select><br>

                <!-- <input type="radio" id="snipped" name="snipped" value=true>
                <label for="snipped">Yes</label><br>
                <input type="radio" id="notSnipped" name="snipped" value=false>
                <label for="snipped">No</label><br> -->
                <br>
            </section>
        </div>
        <input id="profileSubmit" type="submit" value="Submit" href="/dog-profile">
    </form>


</section>

